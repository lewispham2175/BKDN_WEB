@model PagedList.IPagedList<WikiCollege.Models.EF.ACCOUNT>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section title {
    WC Admin - Tài khoản    
}

@section header {
    Danh sách tài khoản    
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Username</th>
                                <th>Fullname</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>CreateDate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="/Admin/Account/Edit/@item.acc_ID">Edit</a>
                                         | 
                                        <a href="/Admin/Account/Delete/@item.acc_ID">Delete</a>
                                    </td>
                                    <td>@item.acc_ID</td>
                                    <td>@item.acc_type</td>
                                    <td>@item.user_name</td>
                                    <td>@item.full_name</td>
                                    <td>@item.email</td>
                                    <td>@item.address</td>
                                    <td>@item.phone</td>
                                    <td>@item.status</td>
                                    <td>@item.created_date</td>
                                </tr>
                            }
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </tbody>
                    </table> 
                </div>
            </div>
        </div>
    </div>
</div>
